<% layout('Layouts/main') %>

<h2 class="fw-bold mb-3">Calendario de riego</h2>

<div class="row g-3">
  <div class="col-md-4">
    <label class="form-label">Agregar riego</label>
    <input type="date" class="form-control mb-2" />
    <button class="btn btn-success w-100">Agregar</button>
  </div>

  <div class="col-md-8">
    <div class="bg-white border rounded p-3">
      <p>Calendario con d√≠as pintados por riego</p>
    </div>
  </div>
</div>

<div class="mt-3">
  <h5>Listado de calendario de riego</h5>
  <table class="table table-bordered">
    <thead>
      <tr><th>Fecha</th><th>Acciones</th></tr>
    </thead>
    <tbody>
        <% calendario.forEach(c => { %>
    <tr>
      <td><%= c.dia %> - <%= c.hora %></td>
      <td>
        <button class="btn btn-warning btn-sm">Modificar</button>
        <button class="btn btn-danger btn-sm">Eliminar</button>
      </td>
    </tr>
  <% }) %>
    </tbody>
  </table>
</div>
