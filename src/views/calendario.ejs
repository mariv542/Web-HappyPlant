<!-- views/calendario.ejs -->
<h2 class="fw-bold mb-3">Calendario de Riego</h2>

<div class="row g-3">

  <!-- Formulario para agregar riego -->
  <div class="col-md-4">
    <form action="/calendario" method="POST">
      <label class="form-label">Agregar riego</label>
      <input type="date" name="dia" class="form-control mb-2" required />
      <input type="time" name="hora" class="form-control mb-2" required />
      <button type="submit" class="btn btn-success w-100">Agregar</button>
    </form>
  </div>

  <!-- Calendario visual -->
  <div class="col-md-8">
    <div class="bg-white border rounded p-3">
      <p>Calendario visual con días marcados para riego (puedes agregar un calendario real con JS más adelante)</p>
    </div>
  </div>

</div>

<!-- Listado de riegos programados -->
<div class="mt-3">
  <h5>Listado de riegos programados</h5>
  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if(calendario && calendario.length > 0) { %>
        <% calendario.forEach(c => { %>
          <tr>
            <td><%= c.dia %></td>
            <td><%= c.hora %></td>
            <td>
              <button class="btn btn-warning btn-sm">Modificar</button>
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3" class="text-center">No hay riegos programados</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
